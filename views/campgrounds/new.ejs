<%- include("../partials/header") %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Create a New Campground</h1>
		<div style="width: 30%; margin: 25px auto;">
			<form action="/campgrounds" method="POST">
				<div class="form-group">
					<input class="form form-control" type="text" name="name" placeholder="name">
				</div>
				<div class="form-group">
					<input class="form form-control" type="number" name="price" placeholder="price" min="0.1" step="0.1">
				</div>
				<div class="form-group">
					<input class="form form-control" type="text" name="image" placeholder="image url">
				</div>
				<div class="form-group">
					<!-- <input class="form form-control" type="text" name="description" placeholder="description"> -->
					<textarea class="form form-control" placeholder="description" name="description" rows="7"></textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-md btn-primary btn-block">Submit!</button>
				</div>
			</form>
			<a href="/campgrounds">Go back</a>
		</div>
	</div>
</div>

<%- include("../partials/footer") %>