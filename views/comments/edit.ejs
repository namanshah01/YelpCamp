<%- include("../partials/header") %>
<!-- COMMENTS -->
<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Edit Comment</h1>
		<div style="width: 30%; margin: 25px auto;">
			<form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="post">
				<div class="form-group">
					<textarea class="form form-control" placeholder="Let down your thoughts here..." 
					name="comment[text]" rows="7"><%= comment.text %></textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-md btn-primary btn-block">Submit!</button>
				</div>
			</form>
			<a href="/campgrounds">Go back</a>
		</div>
	</div>
</div>

<%- include("../partials/footer") %>